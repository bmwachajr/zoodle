<div id="customers">
    <div class="container">
        <div class="row">
            <%= render "shared/sidebar" %>
            <div class="col-md-9 canvas">
                <div class="title-section">
                    <div class="d-flex justify-content-between">
                      <h3>Customers</h3>
                      <p id="notice"><%= notice %></p>
                      <button type="button" class="btn btn-custom" data-toggle="modal" data-target="#customer-form">New Customer</button>
                    </div>
                </div>

                <div class="customer-list">
                    <div class="rolw">
                      <table class="table table-borderless">
                        <thead>
                          <tr>
                            <th scope="col">Customer</th>
                            <th scope="col">Email</th>
                            <th scope="col">Gender</th>
                            <th scope="col">DOB</th>
                            <th>Phone</th>
                            <th cope="col" colspan="3">Action</th>
                          </tr>
                        </thead>

                        <div class="customer-llist-body">
                          <tbody class="customer-list-body">
                            <% @customers.each do |customer| %>
                              <tr>
                                <td class="name-space"><div class="avatar"></div><div class="name"><%= customer.firstname + " " + customer.lastname %></div></td>
                                <td><%= customer.email %></td>
                                <td><span class="badge badge-success"><%= customer.gender %></span></td>
                                <td><%= customer.date_of_birth %></td>
                                <td><%= customer.phone %></td>
                                <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
                                <td><%= link_to 'Delete', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                              </tr>
                            <% end %>
                          </tbody>
                        </div>
                      </table>
                    </div>
                </div>
            </div>
            <%= render "customer_modal" %>
        </div>
    </div>
</div>